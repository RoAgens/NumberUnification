<Window x:Class="V2Architects.NumberSheets.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:V2Architects.NumberSheets"
        Width="280" Height="150"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Title="Унификация номеров листов" 
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/V2Architects.NumberSheets;component/Resources/Logo.ico">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="reportMessage" TextAlignment="Center" Text="Обновлено 23." TextWrapping="Wrap"/>
            <Button Margin="0,20,0,0" Height="40" Content="Ок" Click="Button_Click"/>
        </StackPanel>
    </Grid>
 </Window>
